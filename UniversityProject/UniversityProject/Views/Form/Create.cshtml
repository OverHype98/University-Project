@model UniversityProject.Models.ApplicationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="John" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Doe" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CNP" class="control-label"></label>
                <input asp-for="CNP" class="form-control" placeholder="1910816245700"/>
                <span asp-validation-for="CNP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" placeholder="47" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GraduationGrade" class="control-label">Graduation Grade</label>
                <input asp-for="GraduationGrade" class="form-control" placeholder="9.80" />
                <span asp-validation-for="GraduationGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HighSchoolGrade" class="control-label">HighSchool Grade</label>
                <input asp-for="HighSchoolGrade" class="form-control"  placeholder="8.50"/>
                <span asp-validation-for="HighSchoolGrade" class="text-danger"></span>
            </div>
         

            <div class="form-group">
                <label asp-for="CollegeIds" class="control-label">Colleges</label>
                @foreach (var college in Model.Colleges )
                {

                    <li>
                        <input type="checkbox" name="CollegeIds" value="@college.CollegeId" />@college.CollegeName
                    </li>
                }
                <span asp-validation-for="Colleges" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />  
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

